{
  "manifest_version": 2,
  "name": "StretchIt",
  "version": "0.0.2",
  "description": "",

  "icons": {
    "16": "logo16.png",
		"48": "logo48.png",
		"128": "logo128.png",
    "256": "logo256.png"
  },

  "browser_action": {
    "default_popup": "main.html",
    "default_logo": "logo256.png"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["/js/content.js"]
    }
  ],

  "background": {
    "scripts": ["/js/background.js"],
    "persistent": true
  },

  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "notifications",
    "alarms",
    "idle",
    "notifications",
    "alarms",
    "background"
  ]
}
